{
	"name": "Mailer Checklist",
	"version": "1.1.2",
	"description": "Building HTML mailers? This extension will show you how good the quality of your code is.",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"name": "Mailer Tester",
		"default_popup": "popup.html"
	},
	"permissions": [ "tabs", "<all_urls>" ],
	"content_scripts" : [{ 
		"matches" : [ "file://*" ], 
		"js" : [ "action.js" ] 
	}] 
}
